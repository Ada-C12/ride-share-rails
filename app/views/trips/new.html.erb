<h1>Request a Trip</h1>

<% if @trip.errors.any? %>
  <ul class="errors">
    <% @trip.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @trip, class: 'create' do |f| %>
  <%= f.label :date %>
  <%= f.text_field :date, @date %>
  <%= f.label :cost %>
  <%= f.text_field :cost, @cost %>
  <%= f.label :driver_id%>
  <%= f.text_field :driver_id, @driver %>
  <%= f.select :passenger_id, @passengers.map{ |passenger| [passenger.name, passenger.id]} %>
  <%= f.submit "Request Trip", class: "button" %>
<% end %>
