<h2>New Trip Form for Passenger: <%=@trip.passenger.name %></h2>

<% if @trip.errors.any?%>
  <ul class="errors">
    <% @trip.errors.each do |column, message|%>
      <li>
        <strong><%= column.capitalize%>
        <%= message%>
      </li>
    <% end%>
  </ul>
<% end %>


<%= render partial: "form", locals: { submit_button_label: "Create Trip", trip_form_class: "new-trip-form" } %>
