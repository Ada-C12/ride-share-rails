<h2>New Trip Form</h2>

<%= render partial: "form", locals: { new_trip: true, submit_button_label: "Create Trip" } %>

<% if @trip.errors.any? %>
  <ul class="errors">
    <% @trip.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>
