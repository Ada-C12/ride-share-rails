
<nav>
    <a id="logo" href="/">RideShare Rails!</a>
    <a href="/drivers/">Drivers</a>
    <a href="/passengers">Passengers</a>
</nav>

<main>

    <section class="card">
      <%= link_to "Add driver", new_driver_path, class: 'btn' %>
      <%= link_to "Add passenger", new_driver_path, class: 'btn' %>
    </section>

    <section class="card">
        <h2>New Trip details</h2>
        <%= form_with model: @trip, class: "trip-from" do |f| %>
        <%= f.label :passenger %>
        <%= f.text_select :passenger %>
        <br>
        <%= f.submit "Create", class: "create-trip btn"  %>
    <% end %>
    <% if @trip.errors.any?%>
        <ul class="errors">
            <% @trip.errors.each do |column, message|%>
                <li>
                    <strong><%= column.capitalize%>
                    <%= message%>
                </li>
                <% end%>
            </ul>
    <% end %>
 
    </section>
    
</main>