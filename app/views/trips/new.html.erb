<h2>New Trip Form</h2>

<% form_with model: @trip do |f| %>
<% f.label :date %>
<%= f.text_field :date %>
<%= f.submit %>
<% end %>
<% if @trip.errors.any? %>
  <ul class="errors">
    <% @trip.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>
