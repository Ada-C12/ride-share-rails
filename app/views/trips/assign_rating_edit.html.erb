<% if @trip.errors.any? %>
  <h1>Errors</h1>
  <ul class="errors">
    <% @trip.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>


<%= form_with model: @trip, url: assign_rating_path do |f| %>
  <h2><%= action_name %> Trip</h2>

  <%= f.label :rating %>
  <%= f.text_field :rating %>


  <%= f.submit "Save" %>
<% end %>
