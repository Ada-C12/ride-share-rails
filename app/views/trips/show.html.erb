<h1>Trip Details</h1>

  <%= link_to "Edit Trip Info", edit_trip_path(@trip.id) %>

  <% unless @trip.rating %>
  <section id="add-rating">
  <%= form_with model: @trip do |f| %>
    <%= f.label :rating %>
    <%= f.select :rating, [1,2,3,4,5] %>
    <%= f.submit "Save Rating", class: "button" %>
  <% end %>
  </section>
  <% end %>


  <table class='trips-table'>
    <tr>
      <th>Date</th>
      <th>Rating</th>
      <th>Cost</th>
      <th>Driver Name</th>
      <th>Passenger Name</th>
    </tr>
    <tr>
      <td><%= @trip.date %></td>
      <td><%= @trip.rating %></td>
      <td><%= @trip.cost %></td>
      <td><%= link_to @trip.driver.name, driver_path(@trip.driver.id) %></td>
      <td><%= link_to @trip.passenger.name, passenger_path(@trip.passenger.id) %></td>
    </tr>
    </table>


  </table>
</section>
