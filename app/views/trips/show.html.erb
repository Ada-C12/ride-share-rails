<div class="trip-summary">
  <h2>Trips Summary</h2>
  <table>
    <tr>
      <th>Trip ID</th>
      <th>Date</th>
      <th>Driver</th>
      <th>Passenger</th>
      <th>Rating</th>
      <th>Cost</th>
    </tr>
    <tr>
      <td><%= @trip.id %></td>
      <td><%= @trip.date %></td>
      <% if @trip.driver.nil? %>
        <td><%= "Unknown"%></td>
      <% else %>
        <td> <%= link_to @trip.driver.name, driver_path(@trip.driver.id) %></td>
      <% end %>
      <% if @trip.passenger.nil? %>
        <td><%= "Unknown"%></td>
      <% else %>
        <td> <%= link_to @trip.passenger.name, passenger_path(@trip.passenger.id) %></td>
      <% end %>
      <% if !@trip.rating.nil? %>
        <td><%= @trip.rating %>
      <% else %>
        <td><%= link_to "Rate Trip", edit_trip_path(@trip.id) %></td>
      <% end %>
      <td>$<%= sprintf('%.2f', @trip.cost / 10) %></td>
    </tr>
  </table>
  <span class="trip-button"><%= link_to "Edit", edit_trip_path %></span>
  <span class="trip-button"><%= link_to "Delete", trip_path(@trip.id), method: :delete, data: {confirm: "Are you sure you want to delete this trip?"} %></span>
</div>
