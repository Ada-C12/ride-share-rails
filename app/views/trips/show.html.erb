<section>
  <h2>Trip #<%= @trip.id %></h2>
  <div>
    Date: <%= @trip.date %> <br>

    <div>
      Driver:
      <% if @trip.driver %>
        <%= link_to @trip.driver.name, driver_path(@trip.driver.id) %>
      <% else %>
          deleted
      <% end%>
      <br>
    </div>

    <div>
      Passenger:
      <% if @trip.passenger %>
        <%= link_to @trip.passenger.name, passenger_path(@trip.passenger.id) %>
      <% else %>
          deleted
      <% end%>
      <br>
    </div>
    
    <% if @trip.rating %>
      Rating: <%= @trip.rating %> <br>
    <% else %>
      <div class="inline-rating">
        <%= form_with model: @trip do |f|  %>
          <%= f.label :rating %>:
          <%= f.select :rating, [5, 4, 3, 2, 1] %>

          <%= f.submit "Save Rating", class: "submit-rating" %>
        <% end %>
      </div>
    <% end %>
    Cost: <%= number_to_currency(@trip.cost / 100.00) %> <br>
  </p>


  <div class="trip-options">
    <div><%= link_to "Rate Trip", rate_path %></div>
    <div><%= link_to "Edit", edit_trip_path(@trip.id) %></div>
    <div><%= link_to "Delete", trip_path(@trip.id), method: :delete %></div>
  </div>
  
</section>