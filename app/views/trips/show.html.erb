<h1>Trip Details</h1>

Date: <%= @trip.date %><br>
Rating: <%= @trip.rating %><br>
Cost: $<%= sprintf('%.2f', @trip.cost/100.0) %><br>
Driver: <%= link_to @trip.driver.name, driver_path(@trip.driver.id) %><br>
Passenger: <%= link_to @trip.passenger.name, passenger_path(@trip.passenger.id) %><br>



<br><br>
<%= link_to "Edit", edit_trip_path %>
<%= link_to "Delete", trip_path(@trip.id), method: :delete, data: {confirm: "Are you sure you want to delete this trip?"} %><br>

