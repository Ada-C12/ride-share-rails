<h1>Edit Trip</h1>

<% if @trip.errors.any? %>
  <ul class="errors">
    <% @trip.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @trip do |f| %>
  <%= f.label :date %>
  <%= f.text_field :date %>
  <%= f.label :cost %>
  <%= f.text_field :cost %>
    <%= f.label :rating %>
  <%= f.text_field :rating %>
  <%= f.submit "Save Trip Changes", class: "button" %>
<% end %>
