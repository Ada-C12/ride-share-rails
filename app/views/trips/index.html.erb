<h1>List of Trips</h1>

<%= link_to "Create a new trip", passenger_trips_path(params[:passenger_id]), method: :post %>

<ul>
  <% @trips.each do |trip| %>
    <li>
      <%= trip.date %> <br>
      <%= link_to trip.passenger.name, passenger_path(trip.passenger) %> <br>
      <%= link_to trip.driver.name, driver_path(trip.driver) %> <br>
      <%= trip.rating %> <br>
      <%= trip.cost %>
    </li>
  <% end %>
</ul>