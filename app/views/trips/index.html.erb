
<nav>
<a id="logo" href="/">RideShare Rails!</a>
<a href="/drivers/">Drivers</a>
<a href="/passengers">Passengers</a>
</nav>


<main>
    <section class="card">
        <%= link_to "Add driver", new_driver_path, class: 'btn' %>
        <%= link_to "Add passenger", new_driver_path, class: 'btn' %>
    </section>

    <section class="card">
        <h1>Model</h1>
        <h1>Total</h1>
        <h1>Earnings</h1>
        <table>
            <tr>
                <th>Driver Trips</th>
             
            </tr>
            <% @trip.each do |trip| %>
            <tr>
                <td><%= link_to trip.driver_id, trip_path(id: driver.id)%></td>
                <td><%= link_to trip.passenger_id, trip_path(id: driver.id)%></td>
                <td><%= link_to trip.date, trip_path(id: driver.id)%></td>
                <td><%= link_to trip.rating, trip_path(id: driver.id)%></td>
                <td><%= link_to trip.cost, trip_path(id: driver.id)%></td>
                <td><%= button_to "Edit", edit_trip_path(driver.id), method: :get %></td>
                <td><%= button_to "Delete", trip_path(driver.id), method: :delete, data: { confirm: "Are YOU sure?" } %></td>
            </tr>
            
            <% end %>

        </table>
    </section>
</main>

