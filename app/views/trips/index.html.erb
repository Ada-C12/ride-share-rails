<h1>Trips Landing Page</h1>

<section>
  <h2>RideShare Trips</h2>
  <ul>
    <% @trips.each do |trip| %>
      <li>
        <%= link_to trip.name, trip_path(trip.id)%>
        <%= button_to "(Edit)", edit_trip_path(trip.id), method: :get %>
        <%= button_to "(Delete)", trip_path(trip.id), method: :delete, data: { confirm: "Are YOU sure?" } %> 
      </li>
    <% end %>
  </ul>
</section>