<h1>Trips</h1>
<p><%= link_to "Add New Trip", new_trip_path %></p>
<ul>
  <% @trips.each do |trip|  %>
    <li>
      Trip #: <%= link_to trip.id, trip_path(trip.id) %>
      Date: <%= trip.date %>
       Passenger ID:<%= link_to trip.passenger_id, passenger_path(trip.passenger_id) %>
       Driver ID: <%= link_to trip.driver_id, driver_path(trip.driver_id) %>
       Rating: <%= trip.rating %>
       Cost: $<%= trip.cost %>
       <%= link_to "Edit Trip", edit_trip_path(trip.id) %>
       <%= link_to "Delete", trip_path(trip.id), method: :delete, data: {confirm: "Are you sure?"}%>
    </li>
  <% end %>
</ul>