
<nav>
<a id="logo" href="/">RideShare Rails!</a>
<a href="/drivers/">Drivers</a>
<a href="/passengers">Passengers</a>
</nav>


<main>
    <section class="card">
        <%= link_to "Add driver", new_driver_path, class: 'btn' %>
        <%= link_to "Add passenger", new_driver_path, class: 'btn' %>
    </section>

    <section class="card">
        <h1>Model</h1>
        <h1>Total</h1>
        <h1>Earnings</h1>
        <table>
            <tr>
                <th>ID</th>
                <th>Date</th>
                <th>Drivers</th>
                <th>Passenger</th>
                <th>Price</th>
                <th>Rating</th>
                <th>Delete</th>
             
            </tr>
            <% @trips.each do |trip| %>
            <tr>
                <td><%= trip.id%></td>
                <td><%= trip.date%></td>
                <td><%= trip.driver_id%></td>
                <td><%= trip.passenger_id%></td>
                <td><%= trip.cost%></td>
                <td><%= trip.rating%></td>
                <td><%= button_to "Delete", trip_path(trip.id), class: 'btn', method: :delete, data: { confirm: "Are YOU sure?" } %></td>
            </tr>
            
            <% end %>

        </table>
    </section>
</main>

