<h1>Passengers Landing Page</h1>

<section>
  <h2>RideShare Passengers</h2>
  <ul>
    <% @passengers.each do |passenger| %>
      <li>Passenger name:
        <%= link_to passenger.name, passenger_path(passenger.id)%>
        <%= button_to "(Edit)", edit_passengers_path(passenger.id), method: :get %>
        <%= button_to "(Delete)", passenger_path(passenger.id), method: :delete, data: { confirm: "Are YOU sure?" } %>
      </li>
    <% end %>
  </ul>
</section>