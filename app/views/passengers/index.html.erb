

<table>
  <tr>
    <th>Name</th>
    <th>Phone Number</th>
    <th>Function</th>
  </tr>

   <% @passengers.each do |passenger| %>
  <tr>
    <td><%= link_to passenger.name, passenger_path( passenger.id ) %> </td>
    <td><%= passenger.phone_num %></td>
    <td><%=link_to "Edit", edit_passenger_path(passenger.id) %> | <%= link_to "Delete", passenger_path(passenger.id), method: :delete, data: {confirm: "Are you sure? It will be gone forever."} %></td>
  </tr>
  <% end %>
</table>