<h1>Here's a list of all your passengers!</h1>

<section>
  <%= button_to "Create a new passenger profile", new_passenger_path, method: :get %>
  <ul>
    <% @passengers.each do |passenger|%>
      <li>
        <%= link_to passenger.name, passenger_path(passenger.id)%>

        <%= link_to "(Delete)", passenger_path(passenger.id), method: :delete, data: {confirm: "Are you sure?"}, class: "index-delete-link" %>
      </li>
    <% end %>
  </ul>

</section>


