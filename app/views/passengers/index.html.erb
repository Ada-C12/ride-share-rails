<h1>All Passengers</h1>
<% link_to "Add New Passenger", %>

<section>
  <table class="trip-table">
    <%@passengers.each do |passenger|%>
    <tr>
      <td><%= link_to passenger.name, passenger_path(passenger.id) %></td>
      <td><%= link_to "Edit Passenger Info", edit_passenger_path(passenger.id) %></td>
      <td><%= link_to "Delete Passenger", passenger_path(passenger.id), method: :delete, data: { confirm: "Are you sure?" }%></td>
    </tr>
    <%end%>
  </table>
</section>
