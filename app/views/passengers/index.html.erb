<ul class="index-list">
  <h1>All the passengers</h1>
  <li>
  <span>
  Name
  </span>
  <span>
  Phone Number
  </span>
  </li>
  <% @passengers.all_in_alpha_order.each do |passenger| %>
    <li>
    <span>
    <%= link_to passenger.name, passenger_path(passenger.id) %>
    </span>
    <span>
    <%= passenger.phone_num %>
    </span>
      <span>
  <%= link_to "Edit", edit_passenger_path(passenger.id) %>
  </span>
  <span>
  <%= link_to "Delete", passenger_path(passenger.id), method: :delete, data: { confirm: "Are you sure? "} %>
  </span>

    </li>
  <% end %>
</ul>
