<section class="passengers-container">
  <h2 class="passengers-border">Passengers' Information</h2>
  <ol class="trips-drivers-passengers-list">
    <% @passengers.each do |passenger| %>
      <li>
        <%= link_to passenger.name, passenger_path(passenger.id) %>
        <%= link_to "Edit this Passenger", edit_passenger_path( passenger.id ), class: "passengers-edit-button" %>
        <%= link_to"Delete", passenger_path( passenger.id ), method: :delete, data: { confirm: "Are you sure you want to delete this passenger?"}, class: "passengers-edit-button" %>
      </li>
    <% end %>
  </ol>
  </section>