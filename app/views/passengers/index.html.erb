<h1>List of Passengers</h1>

<%= link_to "Create a new Passenger", new_passenger_path %>

<div class="container">
  <div class="row">
    <div class="col-sm">
      <table class="table table-sm">
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Name</th>
          <th scope="col">Phone Number</th>
        </tr>
        <% @passengers.each do |passenger| %>
        <tr>
          <td><%= passenger.id %> </td>
          <td><%= link_to passenger.name, passenger_path(passenger) %> </td>
          <td><%= passenger.phone_num %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>