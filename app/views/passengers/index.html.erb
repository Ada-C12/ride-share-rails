<div id='index'>
  <h2> Passengers </h2>

  <ul id='p-index'>
    <% @passengers.sort.each do |passenger|  %>
      <li>
        <span class='id'>ID:  <%= passenger.id %></span>   
        <span class='name'>NAME:  <%= link_to passenger.name, passenger_path(passenger), class:"link" %></span>   
      </li>
    <% end %>
  </ul>
</div>


