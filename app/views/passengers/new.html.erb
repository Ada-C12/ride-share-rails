<section>

  <% if @passenger.errors.any? %>
    <ul class="errors">
      <% @passenger.errors.each do |column, message| %>
        <li>
          <strong><%= column.capitalize %></strong> <%= message %>
        </li>
      <% end %>
    </ul>
  <% end %>

  <h2>Add a New Passenger</h2>

  <%= render partial: "form", locals: { action_name: "Add", message: "add a new" } %>
</section>

