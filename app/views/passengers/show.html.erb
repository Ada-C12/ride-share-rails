<h1>SHOWING PASSENGER INFO</h1>

<%= link_to "!!!Request Trip!!!", new_trip_path(params: {passenger_id: @passenger.id}) %>

<section class="passenger_grid">
  <section class="header_row"><%= "ID" %></section>
  <section class="header_row"><%= "NAME" %></section>
  <section class="header_row"><%= "PHONE NUMBER" %></section>
  <section class="header_row"><%= "EDIT" %></section>
  <section class="header_row"><%= "DELETE" %></section>
  

    <section><%= @passenger.id%></section>
    <section><%= @passenger.name%></section>
    <section><%= @passenger.phone_num%></section>

    <%= link_to "EDIT", edit_passenger_path(id: @passenger.id) %>
    <%= link_to "DELETE", passenger_path(id: @passenger.id), method: :delete, data: { confirm: "Sure?" } %>
</section>


<br><hr><br>
<h1>SHOWING PASSENGER TRIP HISTORY</h1>


<section class="trips_grid">
  <section class="header_row"><%= "TRIP ID" %></section>
  <section class="header_row"><%= "DATE" %></section>
  <section class="header_row"><%= "DRIVER ID" %></section>
  <section class="header_row"><%= "DRIVER NAME" %></section>
  <section class="header_row"><%= "COST" %></section>
  <section class="header_row"><%= "RATING" %></section>
  
  <% @passenger.trips.each do |trip|%>
    <section><%= trip.id%></section>
    <section><%= trip.date%></section>
    <section><%= trip.driver_id%></section>
    <section>Driver Name here</section>
    <section><%= trip.cost%></section>
    <section><%= trip.rating%></section>
  <% end %>
</section>