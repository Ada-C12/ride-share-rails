@user = "Passenger"
<h2>Name: <%= @passenger.name %></h2>
<h3>Phone Number: <%= @passenger.phone_num %></h3>
<h3>Total Amount Spent: $<%= @passenger.total_spent %>

<p><%= link_to "Edit Passenger", edit_passenger_path %></p>
<p><%= link_to "Delete Passenger", passenger_path(@passenger), method: :delete, data: {confirm: "Are you sure?"}%></p>

<% @passenger.trips.each do |trip| %>
<h2>Trip ID: <%= trip.id %></h2>
<h3>Date: <%= trip.date %></h3>
<h3>Driver: <%= trip.driver.name %></h3>
<h3>Rating: <%= trip.rating %></h3>
<h3>Cost: $<%= trip.cost%></h3>
<p><%= link_to "Edit Trip Rating", edit_trip_path(trip.id) %></p>
<p><%= link_to "Delete Trip", trip_path(trip.id), method: :delete, data: {confirm: "Are you sure?"}%></p>
<% end %>

<p><%= link_to "Add New Trip", passenger_trips_path(@passenger.id), method: :post %></p>
<p><%= link_to "Return to Passenger List", passengers_path %></p>