<h1>Passenger Details: <%= @passenger.name%></h1>

<h3>Trips Taken</h3>
<% @passenger.trips.each do |trip| %>
  Date: <%= trip.date %>, Rating: <%= "⭐" * trip.rating.to_i %> Cost: <%= trip.cost %>, Driver: <%= trip.driver.name %> 
    <% if trip.rating.nil? %>
      <%= link_to "Complete Trip", complete_trip_path(trip), method: :patch %>
    <% end %>
  <br>
<% end %>

<%= link_to "Create a New Trip", passenger_trips_path(@passenger), method: :post %>

<div>
<%= link_to "Edit Passenger", edit_passenger_path(@passenger) %>
<%= link_to "Delete Passenger", passenger_path(@passenger), method: :delete, data: {confirm: "Are you sure?"} %>
<%= link_to "Passenger List", passengers_path %>
</div>