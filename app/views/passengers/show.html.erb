<div class="container">
  <div class="detail-card">
    <h1>Passenger Details</h1>
    <ul class="details">
      <li>
        <img src="https://i.pravatar.cc/300" />
      </li>
      <li>
      Name: <%= @passenger.name %><br>
      Phone Number: <%= @passenger.phone_num %><br>
      Total spent: $<%= sprintf('%.2f', @passenger.total_money_spent) %><br>
      <div class="buttons">
      <%= link_to "Edit", edit_passenger_path %><br>
      <%= link_to "Delete", passenger_path(@passenger.id), method: :delete, data: {confirm: "Are you sure you want to delete this passenger?"} %><br>
      </div>
      </li>
    </ul>
  </div>
  <br>

  <div class="trip-summary">
    <h2>Trips Summary</h2>
    <table>
      <tr>
        <th>Trip ID</th>
        <th>Date</th>
        <th>Driver</th>
        <th>Cost</th>
      </tr>
      <% @passenger.trips.each do |trip| %>
      <tr>
        <td><%= link_to trip.id, trip_path(trip) %></td>
        <td><%= trip.date %></td>
        <td><%= trip.driver.name %></td>
        <td><%= trip.cost %></td>
      <tr>
      <% end %>
  </table>
  <br>
  <%= link_to "Trip Request", passenger_trips_path(@passenger.id), method: :post %>

  </div>
</div>
