<div class="container">
  <div class="detail-card">
    <h1>Passenger Details</h1>
    <ul class="details">
      <li>
        <img src="https://i.pravatar.cc/300" />
      </li>
      <li>
      Name: <%= @passenger.name %><br>
      Phone Number: <%= @passenger.phone_num %><br>
      Total spent: $<%= sprintf('%.2f', @passenger.total_money_spent) %><br>
      <div class="buttons">
      <%= link_to "Edit", edit_passenger_path, class: "btn btn-primary" %><br>
      <%= link_to "Delete", passenger_path(@passenger.id), method: :delete, class: "btn btn-primary", data: {confirm: "Are you sure you want to delete this passenger?"} %><br>
      </div>
      </li>
    </ul>
  </div>
</div>
  <br>
 
  <%= link_to "Request", passenger_trips_path(@passenger.id), method: :post %>

  <h2>Trips</h2>

  <% @passenger.trips.each do |trip| %>
    <li><%= link_to trip.date, trip_path(trip) %>
  <% end %>

