<section class="driver-passenger-form">
  <%# validation %>
  <% if @passenger.errors.any? %>
    <ul class="errors">
      <% @passenger.errors.each do |column, message| %>
        <li>
          <strong><%= column.capitalize %></strong> <%= message %>
        </li>
      <% end %>
    </ul>
  <% end %>
  <%# form %>
  <%= form_with model: @passenger, class: "passenger_form_class" do |f| %>
    <p>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :phone_num %>
      <%= f.text_field :phone_num %>
    </p>
    <p>
      <%= f.submit button, class: "passenger-form-button" %>
    </p>
  <%end%>
</section>