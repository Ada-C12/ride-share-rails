<nav>
<a href="/">RideShare Rails!</a>
<a href="/drivers/">Drivers</a>
<a href="/passengers">Passengers</a>
</nav>

<main>
  <section class="card">
      <%= link_to "Add driver", new_driver_path, class: 'btn' %>
      <%= link_to "Add passenger", new_passenger_path, class: 'btn' %>
  </section>

    <%= form_with model: @passenger, class: "passenger-form" do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <br>
      <%= f.label :phone_num %>
      <%= f.text_field :phone_num %>
      <br>
      <%= f.submit "Create", class: "create-passenger" %>
      <%= f.submit "Edit", class: "edit-passenger" %>

    <% end %>
</main>