<% if @passenger.errors.any? %> 
  <ul class="errors">
    <% @passenger.errors.each do |column, message| %>
    <li>
    <%= column.capitalize %> <%= message %>
    </li>
    <% end %>
  </ul>
<% end %>

<div class=form>
  <%= form_with model: @passenger, class: "passenger-form" do |f| %>
    <p>Please complete the fields below to <%= action_name.downcase %> passenger. </p>

    <%= f.label :name %>
    <%= f.text_field :name%>
    <br>
    <%= f.label :phone_number %>
    <%= f.text_field :phone_num %>
    <br><br>
    <%= f.submit "#{action_name} Passenger", class: "passenger-button" %>
  <% end %>
</div>
