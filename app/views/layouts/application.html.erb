<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Goober Ride Share</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <ul class="nav">
        <li id="home-nav"><%= link_to "Goober Ride Share", root_path %></li>
        <li id="drivers-menu"><%=link_to "Drivers", drivers_path %>
          <ul>
            <li><%=link_to "View Drivers", drivers_path %></li>
            <li><%=link_to "Add Driver", new_driver_path %></li>
          </ul>
        </li>
        <li><%=link_to "Passengers", passengers_path %>
          <ul>
            <li><%=link_to "View Passengers", passengers_path %></li>
            <li><%=link_to "Add Passenger", new_passenger_path %></li>
          </ul>
        </li>
      </ul>
    </nav>
    <%= yield %>
  </body>
</html>
