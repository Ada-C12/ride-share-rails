<!DOCTYPE html>
<html>
  <head>
    <title> RideShareRails </title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
<link href="https://fonts.googleapis.com/css?family=Questrial&display=swap" rel="stylesheet">
  </head>

  <body>

    <nav>
      <ul>
        <li><h1><%= link_to "Rails Ride Share", root_path, class:"link" %></h1></li>
        <div class="subnav">
          <li><%= link_to "Drivers", drivers_path, class:"link" %></li>
          <ul>
            <li><%= link_to "Add New Driver", new_driver_path, class:"link" %></li>
          </ul>
        </div>
        <div class="subnav">
          <li><%= link_to "Passengers", passengers_path, class:"link" %></li>
          <ul>
            <li><%= link_to "Add New Passenger", new_passenger_path, class:"link" %></li>
          </ul>
        </div>
      </ul>
    </nav>

    <main>
      <%= yield %>
    </main>
  </body>
</html>
