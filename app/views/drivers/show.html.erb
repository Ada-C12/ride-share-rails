<h2> Driver name: <%= @driver.name %></h2>
<p> VIN: <%= @driver.vin %></p>
<p> Status: <%= @driver.available %></p>
<p> Total Earnings: <%= @driver.total_earnings %></p>
<p> Average Rating: <%= @driver.average_rating %></p>

<%= link_to "Edit Driver", edit_driver_path(@driver) %> <br>
<%= link_to "Delete Driver", driver_path(@driver), method: :delete, data: { confirm: "Are you sure you want to delete this driver?" } %> <br>


<h3><%= @driver.name %>'s Trips</h3>

<div class="container">
  <div class="row">
    <div class="col-sm">
      <table class="table table-sm">
        <tr>
          <th scope="col">Trip ID</th>
          <th scope="col">Trip Date</th>
          <th scope="col">Passenger Name</th>
          <th scope="col">Driver Name</th>
          <th scope="col">Rating</th>
          <th scope="col">Cost</th>
        </tr>
        <% @driver.trips.each do |trip| %>
        <tr>
          <td><%= link_to trip.id, trip_path(trip.id) %> </td>
          <td><%= trip.date %> </td>
          <td><%= link_to trip.passenger.name, passenger_path(trip.passenger) %></td>
          <td><%= link_to trip.driver.name, driver_path(trip.driver) %></td>
          <td><%= trip.rating %></td>
          <td><%= trip.cost %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>