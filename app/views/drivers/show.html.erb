<p id="notice"><%= notice %></p>
<h2>Driver Profile</h2>

<p>
  <strong>Name:</strong>
  <%= @driver.name %>
</p>

<p>
  <strong>Vin:</strong>
  <%= @driver.vin %>
</p>

<p>
  <strong>Status:</strong>
  <% if @driver.active == true %>
    <%= "Available" %>
  <% else %>
    <%= "NOT Available" %>
  <% end %>
</p>

<p>
  <strong>Car Make:</strong>
  <%= @driver.car_make %>
</p>

<p>
  <strong>Car Model:</strong>
  <%= @driver.car_model%>
</p>

<p>
  <strong>My trips:</strong>
  <% @driver.find_driver_trips.each do |trip| %>
    <%= link_to 'Trip', trip_path %>
  <% end%>
</p>

<p>
  <strong>Total Earnings</strong>
  <%= @driver.calculate_total_earnings%>
</p>

<p>
  <strong>Average Rating</strong>
  <%= @driver.calculate_average_rating%>
</p>

<%= link_to 'Edit', edit_driver_path(@driver) %> 
<%= link_to 'Back to Drivers', drivers_path %>
<%= link_to 'Home', root_path %>