<nav>
    <a id="logo"href="/">RideShare Rails!</a>
    <a href="/drivers/">Drivers</a>
    <a href="/passengers">Passengers</a>
</nav>

<main>
    <section class="card">
        <%= link_to "Add driver", new_driver_path, class: 'btn' %>
        <%= link_to "Add passenger", new_passenger_path, class: 'btn' %>
    </section>

    <section class="card">
            <article>
                <h3>Name: <%= @driver.name %></h3>
                <h3>Average Rating: <%= @driver.average_rating %></h3>
                <h3>Model: <%= @driver.car_model %></h3>
                <h3>Total Earnings: <%= @driver.total_earnings %></h3>
        </article>
        <article>
            <h1>Driver Trips</h1>
            <table>
            <tr>
                <th>ID</th>
                <th>Date</th>
                <th>Drivers</th>
                <th>Passenger</th>
                <th>Price</th>
                <th>Rating</th>
                <th>View</th>
                <th>Delete</th>
             
            </tr>
            <% @trips.each do |trip| %>
            <tr>
            
                <td><%= trip.id%></td>
                <td><%= trip.date%></td>
                <td><%= trip.driver_id%></td>
                <td><%= trip.passenger_id%></td>
                <td><%= trip.cost%></td>
                <td><%= trip.rating%></td>
                <td><%= link_to "View", trip_path(trip.id), class: 'btn'%></td>
                <td><%= button_to "Delete", trip_path(trip.id), class: 'btn', method: :delete, data: { confirm: "Are YOU sure?" } %></td>
            </tr>
            
            <% end %>

        </table>
        </article>
    </section>
</main>