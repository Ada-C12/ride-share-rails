<h1>Driver Details</h1>
<nav>
  <ul>
    <li><%= link_to "Edit Driver", edit_driver_path(@driver.id) %></li>
    <li><%= link_to "Delete Driver", driver_path, method: :delete, data: {confirm: "Delete this driver?" } %></li>
  </ul>
</nav>

<h3><%= @driver.name %></h3>
<ul>
  <li>VIN: <%= @driver.vin %></li>
</ul>

<p><ol><%= @driver.trips.each do |trip| %>

  <li><%= trip.date%>
    <ul>
      <li>Roden by <%= trip.passenger.name %></li>
      <li>Driven by <%= trip.driver.name %></li>
      <li>Cost <%= trip.cost %></li>
      <li>Rating <%= trip.rating %></li>
    </ul>
  </li>
  <% end %>
</ol></p>
