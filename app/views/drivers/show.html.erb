<h1>Driver Details</h1>
<nav>
  <ul>
    <li><%= link_to "Edit Driver", edit_driver_path(@driver.id) %></li>
    <li><%= link_to "Delete Driver", driver_path, method: :delete, data: {confirm: "Delete this driver?" } %></li>
  </ul>
</nav>

<h3><%= @driver.name %></h3>
<ul>
  <li>VIN: <%= @driver.vin %></li>
</ul>

<p>Total earnings: $<%= sprintf('%.2f', @driver.total_earnings) %></p>
<p>Average rating: <%= @driver.average_rating %></p>
<p>Total trips gaven: <%= @driver.trips.length %></p>

<table>
  <tr>
    <th>Date</th>
    <th>Rating</th>
    <th>Cost</th>
    <th>Roden By</th>
  </tr>
  <%@driver.trips.each do |trip|%>
  <tr>
    <td><%=trip.date%></td>
    <td><%=trip.rating%></td>
    <td><%=trip.cost%></td>
    <td><%=trip.passenger.name%></td>
  </tr>
  <% end %>
</table>
