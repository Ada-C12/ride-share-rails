<div class="container">

  <div class="detail-card">
    <h1>Driver Details</h1>
    <ul class="details">
      <li>
        <img src="https://i.pravatar.cc/300" />
      </li>

      <li>
      Name: <%= @driver.name %><br>
      <% if @driver.available %>
      Status: Available <%= link_to "Go-Offline", toggle_path(@driver.id), method: :patch %><br>
      <% else %>
      Status: Unavailable <%= link_to "Go-Online", toggle_path(@driver.id), method: :patch %><br>
      <% end %>
      Average Rating: <%= @driver.average_rating %><br>
      Total Earnings: $<%= @driver.total_earnings %><br>

      VIN: <%= @driver.vin %><br>
      Car Make: <%= @driver.car_make %><br>
      Car Model: <%= @driver.car_model %><br>

      <br>
      <div class="buttons">
        <%= link_to "Edit", edit_driver_path %>
        <%= link_to "Delete", driver_path(@driver.id), method: :delete, data: {confirm: "Are you sure you want to delete this driver?"} %><br>
      </li>
      </div>
    </ul>
  </div>

    <div class="trip-summary">  
      <h2>Trips Summary</h2>
        <table>
        <tr>
          <th>Trip ID</th>
          <th>Date</th>
          <th>Passenger</th>
          <th>Cost</th>
        </tr>
      <% @driver.trips.each do |trip| %>
        <tr>
        <td><%= link_to trip.id, trip_path(trip) %></td>
        <td><%= trip.date %></td>
        <td><%= trip.passenger.name %></td>
        <td><%= trip.cost %></td>
        </tr>
      <% end %>

      </div>
</div>
