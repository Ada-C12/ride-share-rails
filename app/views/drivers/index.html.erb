<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Drivers</title>
</head>

  <body>
       <%= render partial: "shared/header+nav" %>
    
    <section>
      <h1>Drivers</h1>
      <ol>
        <% @drivers.each do |driver|  %>
          <li>Name: <%= link_to driver.name, driver_path(driver) %></li>
          <%if driver.active == true %>
            Active: <%= driver.active %> 
          <%else%>
            Active: false 
          <%end %>
          <%= button_to 'Delete', driver_path(driver),method: :delete, data: {confirm: "Are you sure?"} %>
          <%= button_to 'Edit', edit_driver_path(driver.id), method: :get %>
          <%= button_to 'Active/Inactive', active_driver_path(driver.id), method: :put %>
          <hr>
        <%end %>
      </ol>
    </section>
  </body>
</html>