
<nav>
<a id="logo" href="/">RideShare Rails!</a>
<a href="/drivers/">Drivers</a>
<a href="/passengers">Passengers</a>
</nav>


<main>
    <section class="card">
        <%= link_to "Add driver", new_driver_path, class: 'btn' %>
        <%= link_to "Add passenger", new_driver_path, class: 'btn' %>
    </section>

    <section class="card">
        <h1>Drivers List</h1>
        <table>
            <tr>
                <th>Driver Name</th>
                <th>VIN Number</th>
            </tr>
            <% @drivers.each do |driver| %>
            <tr>
                <td><%= link_to driver.name, driver_path(id: driver.id)%></td>
                <td><%= link_to driver.vin, driver_path(id: driver.id)%></td>
                <td><%= button_to "Edit", edit_driver_path(driver.id), method: :get %></td>
                <td><%= button_to "Delete", driver_path(driver.id), method: :delete, data: { confirm: "Are YOU sure?" } %></td>
            </tr>
            
            <% end %>

        </table>
    </section>
</main>

