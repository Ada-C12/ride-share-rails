<a id="logo" href="/">RideShare Rails!</a>
<a href="/drivers/">Drivers</a>
<a href="/passengers">Passengers</a>
</nav>


<main>
    <section class="card">
        <%= link_to "Add driver", new_driver_path, class: 'btn' %>
        <%= link_to "Add passenger", new_driver_path, class: 'btn' %>
    </section>

    <section class="card">
        <h1>Drivers List</h1>
        <ol>
            <% @drivers.each do |driver| %>
            <li>
            <%= link_to driver.name, driver_path(id: driver.id)%>
            <br>
            <%= link_to driver.vin, driver_path(id: driver.id)%>
            </li>
            <% end %>
        </ol>
    </section>
</main>