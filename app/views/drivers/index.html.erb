<h1> Driver Index </h1>

<ul>
  <% @drivers.each do |driver| %>
    <li>
    <%= driver.id %>.  
    <%= driver.name %> | 
    <%= driver.vin %> |
    <%= link_to "Edit", edit_driver_path(driver) %>
    <%= link_to "Delete", driver_path(driver), method: :delete, data: { confirm: "Are you sure you want to delete #{driver.name}?"} %>
    </li>
  <% end %>

</ul>