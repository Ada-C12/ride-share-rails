<%# form_with is a view helper that will generate the proper form for us and will help us hook into the other controller actions %>
<%= form_with model: @driver, class: driver_form_class do |f| %>

  <%# f.text_field :somenameofsomeattributeonbook ... in this case, :title %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :vin %>
  <%= f.text_field :vin %>
  
  <%= f.submit submit_button_label, class: "driver-form-button" %>

<% end %>