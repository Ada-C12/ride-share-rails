
<% if @driver.errors.any? %>
  <ul class="errors">
    <% @driver.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>





<%= form_with model: @driver, class: driver_form_class do |f| %>

  <%# f.text_field :somenameofsomeattributeonbook ... in this case, :title %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :vin %>
  <%= f.text_field :vin %>
  <%= f.label :active %>
  <%= f.text_field :active %>
  <%= f.label :car_make %>
  <%= f.text_field :car_make %>
  <%= f.label :car_model %>
  <%= f.text_field :car_model %>
  
  <%= f.submit submit_button_label, class: "driver-form-button" %>

<% end %>