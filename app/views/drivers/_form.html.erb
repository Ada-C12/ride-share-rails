<%= form with model: @driver do |f| %>

<%= f.label 'Name:' %>
<%= f.text_field :name %>
<br>
<%= f.label 'VIN:' %>
<%= f.text_field :vin %>
<br>
<%= f.label 'Active:' %>
<%= f.select :active, [false, true] %>
<br>
<%= f.label 'Car Make: '%>
<%= f.text_field :car_make %>
<br>
<%= f.label 'Car Model: '%>
<%= f.text_field :car_model%>

 <%= f.submit "#{action_name} Driver", %>

<% end %>