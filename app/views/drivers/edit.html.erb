<section>
  <h2>Update this Driver</h2>

  <% if @driver.errors.any? %>
    <ul class="errors">
      <% @driver.errors.each do |column, message| %>
        <li>
          <strong><%= column.capitalize %></strong> <%= message %>
        </li>
      <% end %>
    </ul>
  <% end %>

  <%= render partial: "form", locals: { action_name: "Update", message: "update this" } %>
</section>