<section>
  <h2>Update this Driver</h2>

  <%= form_with model: @driver, class: "driver-form" do |f| %>
    <h3>Please enter information to update this driver</h3>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :vin %>
    <%= f.text_field :vin %>

    <%= f.submit "Update Driver", class: "submit-button" %>
  <% end %>
</section>