<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>Driver</title>
  </head>

  <body>
  <body>
       <%= render partial: "shared/header+nav" %>

     <% if @driver.errors.any? %>
      <% @driver.errors.each do |column, message| %>
        <li>
          <strong><%= column.capitalize %></strong> <%= message %>
        </li>
      <% end %>
    </ul>
    <% end %>

    <%= form_with model: @driver do |f| %>
      <p>Please provide the following information to update the driver to our database:</p>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :vin %>
      <%= f.text_field :vin %>

      <%= f.label :active, "Active/Inactive" %>
      <%= f.text_field :active %>

      <%= f.submit "Update Driver" %>
    <% end %>
  </body>
</html>