<main>
  <h1>Edit Driver Form</h1>

  <% if @driver.errors.any? %>
    <ul class="errors">
      <% @driver.errors.each do |column, message| %>
        <li>
          <strong><%= column.capitalize %></strong> <%= message %>
        </li>
      <% end %>
    </ul>
  <% end %>

  <%= render partial: "form", locals: { submit_button_label: "Update Driver" } %>
</main>
