<section>
  <h2>Add a New Driver</h2>

  <% if @driver.errors.any? %>
    <ul class="errors">
      <% @driver.errors.each do |column, message| %>
        <li>
          <strong><%= column.capitalize %></strong> <%= message %>
        </li>
      <% end %>
    </ul>
  <% end %>

  <%= render partial: "form", locals: { action_name: "Add", message: "add a new" } %>
</section>