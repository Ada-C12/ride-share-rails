<section>
  <h2>Add a New Driver</h2>

  <%= form_with model: @driver, class: "driver-form" do |f| %>
    <h3>Please enter information to add a new driver </h3>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :vin %>
    <%= f.text_field :vin %>

    <%= f.label :car_make %>
    <%= f.text_field :car_make %>

    <%= f.label :car_model %>
    <%= f.text_field :car_model %>

    <%= f.submit "Add Driver", class: "submit-button" %>
  <% end %>
</section>