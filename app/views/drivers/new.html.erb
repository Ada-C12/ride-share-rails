<main>
  <h1>New Driver Form</h1>

  <% if @driver.errors.any? %>
    <ul class="errors">
      <% @driver.errors.each do |column, message| %>
        <li>
          <strong><%=column.capitalize %></strong> <%= message %>
        </li>
      <% end %>
    </ul>
  <% end %>

  <%= render partial: "form", locals: { submit_button_label: "Create driver", book_form_class: "new-driver-form" } %>
</main>
